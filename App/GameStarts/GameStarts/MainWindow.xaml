<Window x:Class="GameStarts.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GameStarts"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800" WindowStartupLocation="CenterScreen">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Height="40" Background="#FF4E4E4E"></StackPanel>
        <DockPanel DockPanel.Dock="Top" Height="60" Background="#FF610703" >
            <Button x:Name="BackButton" Content="Назад" DockPanel.Dock="Right" Width="100" Click="BackButton_Click" Style="{StaticResource UpButton}"/>
            <Button x:Name="CartButton" Content="Корзина" DockPanel.Dock="Right" Width="100" Click="CartButton_Click" Style="{StaticResource UpButton}"/>
            <Button x:Name="LoginButton" Content="Вход" DockPanel.Dock="Right" Width="100" Style="{StaticResource UpButton}" Click="LoginButton_Click"/>
            <Image x:Name="LogoImg" Height="60" HorizontalAlignment="Left" Width="120" />
        </DockPanel>
        <Frame x:Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
